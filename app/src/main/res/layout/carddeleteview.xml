<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="36dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="10dp">

        <TextView
            android:id="@+id/textViewcno"
            android:layout_width="140dp"
            android:layout_height="wrap_content"

            android:layout_marginStart="58dp"
            android:padding="6dp"
            android:text="Card Number"
            android:textColor="@color/black"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/textViewexpire"
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewcno"
            android:layout_marginStart="58dp"
            android:text="Expire Date"
            android:textColor="@color/black"
            android:textSize="@dimen/c14ts"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/textViewcvc"
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewexpire"
            android:layout_marginStart="58dp"
            android:text="CVC"
            android:textColor="@color/black"
            android:textSize="@dimen/c15ts"
            android:textStyle="normal"/>




    </RelativeLayout>

</androidx.cardview.widget.CardView>